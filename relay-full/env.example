# =================================
# Shogun Relay Environment Variables
# =================================
# Copy this file to .env and configure the values according to your setup

# =================================
# Server Configuration
# =================================
NODE_ENV=production
PORT=8765
HTTPS_PORT=8443
HOST=0.0.0.0

# =================================
# Authentication & Security
# =================================
# IMPORTANT: Change this in production!
SECRET_TOKEN=changeme-in-production
BASIC_AUTH_USER=admin
BASIC_AUTH_PASSWORD=admin

# =================================
# CORS Configuration
# =================================
DISABLE_CORS=false
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://localhost:8765

# =================================
# IPFS Configuration
# =================================
IPFS_ENABLED=false
IPFS_SERVICE=IPFS-CLIENT
IPFS_NODE_URL=http://127.0.0.1:5001
IPFS_GATEWAY=http://127.0.0.1:8080/ipfs
PINATA_GATEWAY=https://gateway.pinata.cloud
PINATA_JWT=

# =================================
# Blockchain/Relay Configuration
# =================================
ETHEREUM_PROVIDER_URL=https://opt-sepolia.g.alchemy.com/v2/demo
ETHEREUM_PRIVATE_KEY=
ONCHAIN_MEMBERSHIP_ENABLED=false
RELAY_REGISTRY_CONTRACT=
INDIVIDUAL_RELAY=
RELAY_ENTRY_POINT_CONTRACT=

# =================================
# File & Storage Configuration
# =================================
MAX_FILE_SIZE=100mb
ENCRYPTION_ENABLED=false
ENCRYPTION_KEY=

# =================================
# SSL Configuration
# =================================
PRIVKEY_PATH=keys/private.key
CERT_PATH=keys/cert.pem

# =================================
# Validation & Debug
# =================================
TYPE_VALIDATION_ENABLED=true
TYPE_VALIDATION_STRICT=false
LOG_LEVEL=info
STORAGE_LOG_ENABLED=true

# =================================
# Gun Database Configuration
# =================================
DISABLE_GUN_AUTH=false

# =================================
# S3 Configuration (Optional)
# =================================
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_BUCKET=
S3_REGION=us-east-1
S3_ENDPOINT=

# =================================
# Development/Testing
# =================================
# Use these for development or testing environments
# SECRET_TOKEN=test-token-for-development
# LOG_LEVEL=debug
# TYPE_VALIDATION_STRICT=true 