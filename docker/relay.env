# Shogun Relay Configuration for Docker Container
# This file is automatically copied to /app/relay/.env during container build

# Relay Server Configuration
RELAY_HOST=0.0.0.0
RELAY_PORT=8765
RELAY_STORE=true
RELAY_PATH=public
RELAY_QR=false
RELAY_NAME=Shogun-Relay-Docker
RELAY_PEERS=http://127.0.0.1:8765/gun
RELAY_PROTECTED=false

# Garbage Collection (enabled for container environments)
GC_ENABLED=true
GC_INTERVAL=3600000
GC_EXPIRATION_AGE=86400000

# Admin Authentication
ADMIN_PASSWORD=shogun2025

# IPFS Configuration (container-internal)
IPFS_API_URL=http://127.0.0.1:5001
IPFS_GATEWAY_URL=http://127.0.0.1:8080
IPFS_API_TOKEN=shogun2025
IPFS_API_KEY=shogun2025

# S3 Configuration (using FakeS3 container service)
ENABLE_S3=true
S3_BUCKET=shogun-bucket
S3_REGION=us-east-1
S3_ACCESS_KEY=shogun2025
S3_SECRET_KEY=shogun2025
S3_ENDPOINT=http://127.0.0.1:4569
S3_ADDRESS=0.0.0.0
S3_PORT=4569


# Performance Tuning for Containers
NODE_ENV=production
NODE_OPTIONS=--max-old-space-size=512

# Logging Configuration
LOG_LEVEL=info
VERBOSE_LOGGING=false 