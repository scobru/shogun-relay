# FakeS3 Configuration for Docker Container
# This file is automatically copied to /app/fakes3/.env during container build

# S3 Server Configuration
S3_ACCESS_KEY=S3RVER2025
S3_SECRET_KEY=S3RVER2025
S3_BUCKET=shogun-bucket
S3_PORT=4569
S3_ADDRESS=0.0.0.0

# Storage Configuration
STORAGE_DIRECTORY=./buckets

# S3 Service Configuration
SERVICE_ENDPOINT=shogun-bucket.127.0.0.1
ALLOW_MISMATCHED_SIGNATURES=true
VHOST_BUCKETS=true

# Container Environment
NODE_ENV=production 