{
  "name": "shogun-enhanced-relay",
  "version": "1.0.0",
  "description": "Enhanced Gun.js relay server with robust connection management and real-time sync",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "nodemon src/index.js",
    "test:routes": "node scripts/test-all-routes.js",
    "test:routes:local": "node scripts/test-all-routes.js http://localhost:8765",
    "test:ipfs": "node scripts/test-ipfs-routes.js",
    "test:ipfs:local": "node scripts/test-ipfs-routes.js http://localhost:8765 shogun2025 0xA6591dCDff5C7616110b4f84207184aef7835048"
  },
  "keywords": [
    "gun",
    "gundb",
    "relay",
    "websocket",
    "real-time",
    "networking",
    "performance",
    "p2p",
    "decentralized"
  ],
  "author": "Shogun Team",
  "license": "MIT",
  "dependencies": {
    "@mblaney/holster": "^1.0.35",
    "cors": "^2.8.5",
    "dockerode": "^4.0.0",
    "dotenv": "^16.5.0",
    "ethers": "^6.13.4",
    "express": "^4.18.2",
    "express-basic-auth": "^1.2.1",
    "express-rate-limit": "^8.0.1",
    "form-data": "^4.0.3",
    "gun": "git+https://github.com/amark/gun.git",
    "http-proxy-middleware": "^3.0.5",
    "ip": "^2.0.1",
    "is-fn": "^3.0.0",
    "multer": "^2.0.1",
    "node-fetch": "^3.3.2",
    "self-adjusting-interval": "^1.0.0",
    "shogun-contracts": "^1.3.1",
    "shogun-theme": "^1.0.0",
    "viem": "^2.21.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "bugs": {
    "url": "https://github.com/your-org/shogun-2/issues"
  },
  "homepage": "https://github.com/your-org/shogun-2#readme",
  "config": {
    "port": 8765,
    "peers": "http://localhost:8766/gun",
    "radiskPath": "radata"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "js,json",
    "ignore": [
      "radata/*",
      "node_modules/*"
    ],
    "env": {
      "NODE_ENV": "development",
      "ENABLE_METRICS": "true",
      "ENABLE_HEALTH": "true"
    }
  }
}
