{
  "name": "shogun-enhanced-relay",
  "version": "1.0.0",
  "description": "Enhanced Gun.js relay server with wire protocol and networking optimizations",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "nodemon src/index.js",
    "enhanced": "node src/simple-enhanced.js",
    "enhanced:dev": "nodemon src/simple-enhanced.js",
    "test-derive": "node test-derive-api.js"
  },
  "keywords": [
    "gun",
    "gundb",
    "relay",
    "websocket",
    "real-time",
    "networking",
    "performance",
    "p2p",
    "decentralized"
  ],
  "author": "Shogun Team",
  "license": "MIT",
  "dependencies": {
    "bullet-catcher": "^3.0.5",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "express-basic-auth": "^1.2.1",
    "gun": "^0.2020.1235",
    "gun-avatar": "^2.2.4",
    "ip": "^2.0.1",
    "node-fetch": "^3.3.2",
    "qr": "^0.5.0",
    "self-adjusting-interval": "^1.0.0",
    "shogun-core": "^1.3.1",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "bugs": {
    "url": "https://github.com/your-org/shogun-2/issues"
  },
  "homepage": "https://github.com/your-org/shogun-2#readme",
  "config": {
    "port": 8765,
    "peers": "http://localhost:8766/gun",
    "radiskPath": "radata"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "js,json",
    "ignore": [
      "radata/*",
      "node_modules/*"
    ],
    "env": {
      "NODE_ENV": "development",
      "ENABLE_METRICS": "true",
      "ENABLE_HEALTH": "true"
    }
  }
}
