{
  "name": "shogun-relay",
  "version": "1.0.2",
  "description": "Enhanced Gun.js relay server with robust connection management and real-time sync",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "start": "tsx src/index.ts",
    "start:dev": "nodemon --exec tsx src/index.ts",
    "postinstall": "node scripts/postinstall.js",
    "build:ts": "tsc",
    "build:ts:watch": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src --max-warnings 0",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "build:dashboard": "cd src/public/dashboard && npx vite build"
  },
  "keywords": [
    "gun",
    "gundb",
    "relay",
    "websocket",
    "real-time",
    "networking",
    "performance",
    "p2p",
    "decentralized"
  ],
  "author": "Shogun Team",
  "license": "MIT",
  "dependencies": {
    "@mblaney/holster": "^1.0.35",
    "@types/vis": "^4.21.27",
    "better-sqlite3": "^11.0.0",
    "cors": "^2.8.5",
    "dockerode": "^4.0.0",
    "dotenv": "^16.5.0",
    "ethers": "^6.13.4",
    "express": "^4.18.2",
    "express-basic-auth": "^1.2.1",
    "express-rate-limit": "^8.0.1",
    "form-data": "^4.0.3",
    "gun": "git+https://github.com/scobru/gun.git",
    "http-proxy-middleware": "^3.0.5",
    "ip": "^2.0.1",
    "is-fn": "^3.0.0",
    "multer": "^2.0.1",
    "node-fetch": "^3.3.2",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "prettier": "^3.7.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "react-vis-network-graph": "^3.0.1",
    "recharts": "^3.6.0",
    "self-adjusting-interval": "^1.0.0",
    "shogun-contracts-sdk": "latest",
    "short-uuid": "^6.0.3",
    "tsx": "^4.19.2",
    "viem": "^2.21.0",
    "vis-network": "^10.0.2",
    "webtorrent": "^2.8.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@tailwindcss/vite": "latest",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/webtorrent": "^0.110.1",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^2.1.0",
    "@vitest/ui": "^2.1.9",
    "autoprefixer": "^10.4.23",
    "daisyui": "latest",
    "eslint": "^9.15.0",
    "globals": "^15.12.0",
    "nodemon": "^3.0.2",
    "postcss": "^8.5.6",
    "tailwindcss": "latest",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.15.0",
    "vite": "^5.0.8",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "bugs": {
    "url": "https://github.com/your-org/shogun-2/issues"
  },
  "homepage": "https://github.com/your-org/shogun-2#readme",
  "config": {
    "port": 8765,
    "peers": "http://localhost:8766/gun",
    "radiskPath": "radata"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts,js,json",
    "ignore": [
      "radata/*",
      "node_modules/*"
    ],
    "env": {
      "NODE_ENV": "development",
      "ENABLE_METRICS": "true",
      "ENABLE_HEALTH": "true"
    }
  }
}
