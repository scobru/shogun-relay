# Relay Server Configuration
RELAY_HOST=localhost
RELAY_PORT=8765
RELAY_STORE=true
RELAY_PATH=public
RELAY_QR=true
RELAY_NAME=S3RVER
RELAY_PEERS=http://localhost:8765/gun
RELAY_PROTECTED=false

# Admin Authentication
ADMIN_PASSWORD=S3RVER

# Relay GunDB User (for x402 subscription data ownership)
# This user owns the subscription data - only the relay can modify/delete it
# If not set, defaults to RELAY_NAME for username and ADMIN_PASSWORD for password
RELAY_GUN_USERNAME=shogun-relay
RELAY_GUN_PASSWORD=your_secure_relay_password_here

# IPFS Desktop Configuration
# These are the default ports for IPFS Desktop
IPFS_API_URL=http://127.0.0.1:5001
IPFS_GATEWAY_URL=http://127.0.0.1:8080
IPFS_API_TOKEN=S3RVER
IPFS_API_KEY=S3RVER

# GunDB Configuration for JSON Error Handling
# Set to true to disable radisk storage (useful for debugging JSON errors)
DISABLE_RADISK=false

# Set to true to automatically clean up corrupted data on startup
CLEANUP_CORRUPTED_DATA=false

# x402 Payment Configuration for IPFS Storage Subscriptions
# Required: Your wallet address to receive payments
X402_PAY_TO_ADDRESS=0xYourWalletAddressHere

# Network: base, base-sepolia, polygon, polygon-amoy
X402_NETWORK=base-sepolia

# Settlement mode: 'facilitator' (default, uses x402.org) or 'direct' (local settlement)
X402_SETTLEMENT_MODE=facilitator

# Optional: Custom facilitator URL (default: https://x402.org/facilitator)
# X402_FACILITATOR_URL=https://x402.org/facilitator

# Optional: Facilitator API key if required
# X402_FACILITATOR_API_KEY=

# Required for direct settlement mode only:
# X402_PRIVATE_KEY=your_private_key_here
# X402_RPC_URL=https://your-rpc-url